 <div class="card mx-auto mt-5" style="max-width: 80%;">
  <h5 class="card-header">{{name}}'s Bill</h5>
  <div class="card-body">
    <h5 class="card-title">{{mstart}} TO {{mend}} <br><br> Pricing : {{cat}}</h5>
    <table class="table table-hover">
      <thead>
        <tr>
          <th class="text-center" scope="col">DATE</th>
          {{#if pbreakfast}}
          <th class="text-center" scope="col">Breakfast</th>
          {{/if}}
          {{#if plunch}}
          <th class="text-center" scope="col">Lunch</th>
          {{/if}}
          {{#if pdinner}}
          <th class="text-center" scope="col">Dinner</th>
          {{/if}}
        </tr>
      </thead>
      <tbody>
        {{#each frows}}
          <tr>
            <td class="text-center">{{this.date}}</td>
            {{#if ../pbreakfast}}
              {{#if this.b}}
                  <td class="text-center"><i class="bi bi-check-square-fill" style="color: #14A44D"></i><br>Rs. {{../pbreakfast}}</td>
              {{/if}}
              {{#unless this.b}}
              <td class="text-center"><i class="bi bi-x-square-fill" style="color: #DC4C64;"></i><br>Rs. 0</td>
              {{/unless}}
            {{/if}}
            {{#if ../plunch}}
              {{#if this.l}}
                  <td class="text-center"><i class="bi bi-check-square-fill" style="color: #14A44D"></i><br>Rs. {{../plunch}}</td>
              {{/if}}
              {{#unless this.l}}
              <td class="text-center"><i class="bi bi-x-square-fill" style="color: #DC4C64;"></i><br>Rs. 0</td>
              {{/unless}}
            {{/if}}
            {{#if ../pdinner}}
              {{#if this.d}}
                  <td class="text-center"><i class="bi bi-check-square-fill" style="color: #14A44D"></i><br>Rs. {{../pdinner}}</td>
              {{/if}}
              {{#unless this.d}}
              <td class="text-center"><i class="bi bi-x-square-fill" style="color: #DC4C64;"></i><br>Rs. 0</td>
              {{/unless}}
            {{/if}}
          </tr>
        {{/each}}
      </tbody>
    </table>
    <div class="mt-3" style="width: 100%; text-align:center;"><h5 class="card-title">Tolal Amount : Rs. {{total}}</h5></div>
    <div class="ms-auto" style="width: fit-content;">
        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
            <i class="bi bi-trash-fill"></i>
        </button>
    </div>
  </div>
</div>


<!-- Modal -->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="staticBackdropLabel">DELETE BILL</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Are you sure you want to delete {{name}}'s Bill ?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <a href="/deletebill/{{bid}}" class="btn btn-danger">Delete</a>
      </div>
    </div>
  </div>
</div>